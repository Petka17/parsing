<div class="row">
	<div class="col-md-6">
		<h1>Список категорий</h1>
	</div>
	<div class="col-md-6">
		<%= button_to "Загрузить", extract_categories_path, class: "btn btn-sm btn-primary center-block", method: :post %>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-condensed table-hover">
		<tr>
			<th>Категория</th>
			<th>URL</th>
			<th>Количество</th>
		</tr>
		
		<% @categories.each do |cat| %>
			<tr>
				<td><%= link_to cat.name, cat %></td>
				<td><%= link_to cat.url_path, cat.url_path %></td>
				<td><%= cat.child_num %></td>
			</tr>
		<% end %>

	</table>
</div>

