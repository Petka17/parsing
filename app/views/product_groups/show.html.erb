<div class="row">

	<div class="col-md-7">
		<div class="well well-lg">

			<dl class="dl-horizontal">
				<dt>Категория</dt>
				<dd><%= link_to @product_group.category_name, @product_group.category %></dd>
				<dt>Подкатегория</dt>
				<dd><%= link_to @product_group.subcategory_name, @product_group.subcategory %></dd>
				<dt>Название</dt>
				<dd><%= @product_group.name %></dd>
				<dt>URL</dt>
				<dd><%= link_to @product_group.url_path, @product_group.url_path %></dd>
				<dt>Количество</dt>
				<dd><%= @product_group.child_num %></dd>
			</dl>

			<%= button_to "Загрузить", extract_product_group_path(@product_group), class: "btn btn-sm btn-primary center-block", method: :post %>
		</div>
	</div>

	<div class="col-md-5">
		<div class="well well-lg">
			<%= image_tag @product_group.img_url, class: "center-block", height: '400', width: '400' %>
		</div>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-hover table-condensed">
		<tr>
			<th class="col-md-1">Код</th>
			<th class="col-md-5">Название</th>
			<th class="col-md-1">Цена</th>
			<th class="col-md-5">Параметры</th>
		</tr>
		
		<% @products.each do |p| %>
			<tr>
				<td><%= p.code %></td>
				<td><%= p.name %></td>
				<td><%= p.price %></td>
				<td><%= p.params %></td>
			</tr>
		<% end %>
		

	</table>
</div>

<div class="table-responsive">
	<table class="table table-hover table-condensed">
		<tr>
			<th class="col-md-6">Имя</th>
			<th class="col-md-6">Значение</th>
		</tr>
		
		<% @features.each do |f| %>
			<tr>
				<td><%= f.name %></td>
				<td><%= f.value %></td>
			</tr>
		<% end %>
		

	</table>
</div>

<div class="row">
	<h2>Описание</h2>
	<%=raw @product_group.description %>
</div>